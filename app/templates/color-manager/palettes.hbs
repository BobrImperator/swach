<div class="bg-white flex flex-wrap items-center p-3 rounded shadow w-full">
  <LinkTo
    class="flex flex-grow items-center mb-1 text-sm w-full"
    @query={{hash paletteId=this.model.colorHistory.id}}
    @route="color-manager.colors"
  >
    Color History
    {{svg-jar "arrow-right" class="icon ml-1" height="12" width="12"}}
  </LinkTo>

  <DragSortList
    @additionalArgs={{hash isColorHistory=true}}
    @classNames="color-history-list flex flex-wrap w-full"
    @isHorizontal={{true}}
    @items={{this.last15Colors}}
    @sourceOnly={{true}}
    @determineForeignPositionAction={{action this.disableMovingColors}}
    @dragEndAction={{action this.moveColorsBetweenPalettes}} as |color|
  >
    <div
      class="inline-block m-1 h-8 w-8"
      style={{html-safe (concat "background-color: " color.hex)}}
      {{on "click" (fn this.colorUtils.copyColorToClipboard color)}}
    ></div>
  </DragSortList>
</div>

<button
  class="flex items-center mt-2 p-2 text-sm hover:text-alt-hover"
  {{on "click" this.createNewPalette}}
>
  {{svg-jar "plus" class="icon mr-1" height="12" width="12"}}
  New Palette
</button>

<PalettesList
  @moveColorsBetweenPalettes={{this.moveColorsBetweenPalettes}}
  @palettes={{this.palettes}}
/>
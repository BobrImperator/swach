<div class="flex flex-wrap w-full">
  {{#each this.last15Colors as |color|}}
    <DraggableObject @content={{color}}>
      <div
        class="inline-block m-1 h-8 w-8"
        style={{html-safe (concat "background-color: " color.hex)}}
      >
      </div>
    </DraggableObject>
  {{/each}}
</div>

<button {{on "click" this.createNewPalette}}>
  New Palette
</button>

<PalettesList @palettes={{this.model.palettes}}/>
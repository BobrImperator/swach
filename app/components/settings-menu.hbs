<div class="font-normal text-sm w-full" data-test-settings-menu>
  <div class="p-1 pb-4">
    <div>
      <Input
        @type="checkbox"
        @checked={{this.settings.openOnStartup}}
        data-test-settings-startup
        {{on "change" @enableDisableAutoStart}}
      />
      Start Swach on system startup
    </div>

    <div>
      <Input
        @type="checkbox"
        @checked={{this.settings.sounds}}
        data-test-settings-sounds
      />
      Play Sounds
    </div>
  </div>

  <div class="border-b border-t p-1 pb-4 pt-3" data-test-settings-select-theme>
    App theme:
    <PowerSelect
      @dropdownClass="bg-menu max-w-md text-alt text-xs"
      @triggerClass="bg-menu max-w-md text-alt text-xs"
      @options={{this.themes}}
      @placeholder="Choose a theme"
      @selected={{this.settings.userTheme}}
      @onChange={{this.changeTheme}} as |theme|
    >
      {{capitalize theme}}
    </PowerSelect>
  </div>

  <div class="border-b p-1 pb-4 pt-4">
    <button
      class="bg-menu pb-1 pl-2 pr-2 pt-1 rounded"
      type="button"
      {{on "click" @checkForUpdates}}
    >
      Check for updates
    </button>
  </div>

  <div class="p-1">
    About:

    <p class="mt-2">
      Version: {{this.version}}
    </p>

    <p>
      Copyright Â© 2020 Ship Shape Consulting LLC. All rights reserved.
    </p>

    <p class="mt-2">
      <a {{on "click" this.visitWebsite}}>
        https://swach.io/
      </a>
    </p>
  </div>
</div>
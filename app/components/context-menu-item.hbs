<span class="context-menu__item__label flex flex-shrink items-center">
  {{#if item.icon}}
    {{svg-jar item.icon class="context-menu__item__icon inline-block h-4 mr-2 w-4"}}
  {{/if}}
  {{item.label}} {{#if _amount}}({{_amount}}){{/if}}
</span>

{{#if item.subActions}}
  {{#unless isDisabled}}
    <ul class="context-menu--sub">
      {{#each item.subActions as |subItem|}}
        {{context-menu-item
          item=subItem
          amount=amount
          itemIsDisabled=itemIsDisabled
          clickAction=clickAction
        }}
      {{/each}}
    </ul>
  {{/unless}}
{{/if}}
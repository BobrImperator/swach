<button {{on "click" this.toggleIsShown}}>
  {{svg-jar "edit-color" class="icon" height="15" width="15"}}

  {{#ember-popover
          event="none"
          isShown=this.isShown
          side="left-start"
          spacing=10
  }}
    <button {{on "click" this.toggleIsShown}}>
      {{svg-jar "close" class="icon m-1" height="12" width="12"}}
    </button>

    <button {{on "click" this.addColorAndClose}}>
      {{svg-jar "check" class="icon m-1" height="12" width="12"}}
    </button>

    <ColorRow
      @color={{this.selectedColor}}
    />

    <div
      {{did-insert this.initColorPicker}}
      {{will-destroy this.destroyColorPickr}}
    ></div>
  {{/ember-popover}}
</button>